<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azultwitter"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.contactos.MainActivity" >

    <RelativeLayout
        android:id="@+id/rel_lay"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignLeft="@+id/linearlayout"
        android:layout_alignRight="@+id/linearlayout"
        android:background="@color/azultwitter"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btn_twitear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_tweet"
            android:src="@drawable/ic_tweet"
            android:onClick="clickBtnTwitear" />

        <Button
            android:id="@+id/btn_salir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/btn_salir"
            android:textColor="@color/red"
            android:textColorHint="@color/red"
            android:onClick="clickBtnSalir" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_twitear"
            android:src="@drawable/ic_buscar"
            android:onClick="clickBtnSearch" />
        
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_lay"
        android:background="@color/lightblue"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_personajes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </ListView>

    </LinearLayout>

    
</RelativeLayout>
